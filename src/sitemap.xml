<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for page in site.pages %}
    {% if page.url contains '.xml' or page.url contains '.php' %}{% else %}
      <url>
        <loc>{{ page.url | remove: '/index.html' | remove: '/index' | absolute_url }}</loc>
        <changefreq>monthly</changefreq>
        <priority>1.0</priority>
      </url>
    {% endif %}
  {% endfor %}
  {% for post in site.posts %}
    <url>
      <loc>{{ post.url | remove: '/index.html' | remove: '/index' | absolute_url }}</loc>
      <changefreq>monthly</changefreq>
      <priority>1.0</priority>
    </url>
  {% endfor %}
</urlset>
